# Database Connector Server - Environment Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
CONNECTOR_SERVER_MODE=development
CONNECTOR_API_PORT=3000
CONNECTOR_DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
CONNECTOR_DATABASE_URL=mysql://connector_user:connector_user_password_2024@mysql-db:3306/connector_db
# Alternative: Set password separately for better security
# CONNECTOR_DATABASE_PASSWORD=connector_user_password_2024

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
CONNECTOR_REDIS_URL=redis://redis-cache:6380/0
# CONNECTOR_REDIS_PASSWORD=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key: openssl rand -hex 32
CONNECTOR_SECRET_KEY=your-32-character-secret-key-here
CONNECTOR_ALGORITHM=HS256
CONNECTOR_ACCESS_TOKEN_EXPIRE_MINUTES=30
CONNECTOR_API_KEYS_ENABLED=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CONNECTOR_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourdomain.com"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
CONNECTOR_LOG_LEVEL=INFO

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
CONNECTOR_MAX_CONNECTIONS=100
CONNECTOR_CONNECTION_TIMEOUT=30

# =============================================================================
# RATE LIMITING
# =============================================================================
CONNECTOR_RATE_LIMIT_REQUESTS=100
CONNECTOR_RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# These are used by docker-compose files
DB_PORT=3306
API_PORT=3000
REDIS_PORT=6379
CORS_ORIGINS=http://localhost:3000,http://localhost:8080